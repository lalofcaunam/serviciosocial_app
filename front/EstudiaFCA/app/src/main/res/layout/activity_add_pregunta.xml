<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información de la pregunta"
            android:textSize="22sp"
            style="@style/labelText" />

        <EditText
            android:id="@+id/tituloPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pregunta *"
            style="@style/inputText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información de las respuestas"
            android:textSize="22sp"
            style="@style/labelText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona la respuesta correcta:"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            style="@style/labelText" />

        <Spinner
            android:id="@+id/respuestaCorrecta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            style="@style/generalText"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="120dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta 1"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    style="@style/labelText" />

                <EditText
                    android:id="@+id/respuesta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Respuesta 1*"
                    style="@style/inputText"/>

                <EditText
                    android:id="@+id/comentarioRespuesta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:hint="Comentario al alumno para que sepa por que no era la respuesta correcta *"
                    style="@style/inputText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta 2"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    style="@style/labelText" />

                <EditText
                    android:id="@+id/respuesta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Respuesta 2*"
                    style="@style/inputText"/>

                <EditText
                    android:id="@+id/comentarioRespuesta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:hint="Comentario al alumno para que sepa por que no era la respuesta correcta *"
                    style="@style/inputText"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta 3"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    style="@style/labelText" />

                <EditText
                    android:id="@+id/respuesta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Respuesta 3*"
                    style="@style/inputText"/>

                <EditText
                    android:id="@+id/comentarioRespuesta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:hint="Comentario al alumno para que sepa por que no era la respuesta correcta *"
                    style="@style/inputText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta 4"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    style="@style/labelText" />

                <EditText
                    android:id="@+id/respuesta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Respuesta 4*"
                    style="@style/inputText"/>

                <EditText
                    android:id="@+id/comentarioRespuesta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:hint="Comentario al alumno para que sepa por que no era la respuesta correcta *"
                    style="@style/inputText"/>

                <Button
                    android:id="@+id/btnConfirmarPregunta"
                    android:text="Aceptar"
                    style="@style/btnSimple"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="20dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</FrameLayout>
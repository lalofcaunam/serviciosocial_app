<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textListaPreguntas"
        android:text="En este momento el cuestionario no cuenta con preguntas, selecciona el botÃ³n flotante para crear una."
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="55dp"
        android:gravity="center" />

    <ListView
        android:id="@+id/list_preguntas_cuestionario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginBottom="80dp"
        />


    <Button
        android:id="@+id/btnAddPregunta"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:gravity="bottom"
        android:layout_margin="15dp"
        android:elevation="50dp"
        android:background="@drawable/ic_baseline_add_circle_24"
        android:drawableTint="@color/colorBtn"
        android:backgroundTint="@color/colorBtn"/>

</FrameLayout>